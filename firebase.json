{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "site-vue/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [ {
      "source": "**",
      "destination": "/index.html"
    } ],
    "headers": [
      {
        "source": "**/*.@(xml)",
        "headers": [
          {
            "key": "Content-Type",
            "value": "text/xml; charset=utf-8"
          }
        ]
      }
      {
        "source": "**/*.@(txt)",
        "headers": [
          {
            "key": "Content-Type",
            "value": "text/plain; charset=utf-8"
          }
        ]
      }
    ]
  }
}
